<% u = URI(database_url) -%>
setup: &setup
  adapter: "<%= u.scheme %>"
  host: "<%= u.host || "localhost" %>"
  username: "<%= u.user || title %>"
  password: "<%= u.password || title %>"
  <% (u.query || "").split("&").map{|i| i.split("=") }.each do |k,v| %>
  <%= k %>: "<%= v %>"
  <% end -%>

<%= env %>:
  database: "<%= s = u.path.to_s[1..-1]; s == "" ? "#{title.gsub('-', '_')}_#{env}" : s %>"
  <<: *setup
